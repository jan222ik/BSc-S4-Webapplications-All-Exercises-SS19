<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
        "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <servlet>
        <servlet-name>GuestBookSaveServlet</servlet-name>
        <servlet-class>GuestBookSaveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexRedirectServlet</servlet-name>
        <servlet-class>IndexRedirectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuestBookSaveServlet</servlet-name>
        <url-pattern>/guest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexRedirectServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>